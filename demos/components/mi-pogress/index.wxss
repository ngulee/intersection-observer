.mi-progress-outer {
  display: inline-flex;
  align-items: center;
}
.mi-progress-wrapper {
  position: relative;
  display: inline-block;
  font-size: 0;
}

.mi-progress {
  position: relative;
  height:100%;
  border-radius: 1000rpx;

}

.current-progress-wrapper{
  position: relative;
  width: 0;
  height: 100%;
  animation: progress 0.5s forwards;

}
.current-progress {
  height:100%;
  border-radius: 1000rpx;
  overflow: hidden;
}

.current-value {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -53%, 0);

  font-size: 21rpx;
  color: #fff;
}

.icon-wrapper {
  position: absolute;
  width: 100%;
  height: 100%;

  top: 0;
  left: 0;

  transform: translateY(50%);
}

.icon {
  position: absolute;
  top: 0;
  right: 0;
}

@keyframes progress {
  100% {
    width: 100%;
  }
}