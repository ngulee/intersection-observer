.link-tab {
  display: flex;
  height: 100vh;
  overflow: hidden;
}

.scroll-view {
  height: 100vh;
  margin-right: -100rpx;
  width: calc(100% + 15rpx);
}


.tab-navigation {
  width: 200rpx;
  overflow: hidden;
  border-right: 1px solid red;
}
.navigation-item {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

  font-size: 28rpx;
  
  height: 120rpx;
  line-height: 120rpx;
}

.navigation-item_active {
  color: red;
  font-size: 30rpx;
}




.tab-content {
  box-sizing: border-box;
  flex: 1;
  padding-left: 20rpx;
  padding-bottom: 10rpx;
}

.content-item-title {
  font-size: 40rpx;
}
.content-item-body {
  display: flex;
  align-items: center;
  height: 300rpx;
  background: burlywood;
}