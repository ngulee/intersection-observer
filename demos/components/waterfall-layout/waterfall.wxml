<scroll-view 
  class="waterfall {{className}}"
  style="height:{{height}};width:{{width}};"
  scroll-y="{{true}}"
  upper-threshold="{{upperThreshold}}"
  lower-threshold="{{lowerThreshold}}"
  bindscrolltolower="handleScrollBoundary"
  bindscrolltoupper="handleScrollBoundary"
>
  <slot ></slot>
</scroll-view>

