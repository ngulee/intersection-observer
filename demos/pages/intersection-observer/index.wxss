.header {
  height: 110vh;
}
.fixed {
  position: fixed;
  top: 0;
  left: 0;
  height: 150rpx;
  width: 100vw;
  background: red;
}
.product-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: yellow;
  height: 100rpx;
}
.top, .bottom {
  width: 100%;
  height: 50%;
}
.top {
  background-color: skyblue;
}
